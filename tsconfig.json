{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["es6", "es2015", "dom"],
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "rootDir": "src",
        "strict": true,
        "target": "es6",
        "types": ["node"]
    },
	"include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
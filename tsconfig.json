{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "lib",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "strict": true,
        "target": "es2017",
        "types": ["node"],
        "removeComments": true
    },
	"include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}